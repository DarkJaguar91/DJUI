<GuiXml>
    <Controls>
        <TopLevelControl name="DJPlayerFrame" mouseEnabled="false">
            <Dimensions x="225" y="90"/>
            <Anchor point="CENTER" offsetX="-400" offsetY="300"/>

            <Controls>
                <Label name="DJPlayerLevelLabel" layer="1" level="1"
                        font="DJNAMEFONT"
                        color="BBAABB" text="100" verticalAlignment="CENTER" horizontalAlignment="LEFT">
                    <Anchor point="TOPLEFT"/>    
                </Label>
                <Label name="DJPlayerNameLabel" layer="1" level="1"
                        font="DJNAMEFONT"
                        color="BBAABB" text="Player Name" verticalAlignment="CENTER" horizontalAlignment="LEFT">
                    <Anchor point="TOPLEFT" relativeTo="DJPlayerLevelLabel" relativePoint="TOPRIGHT" offsetX="10"/>
                </Label>

                <Backdrop name="$(parent)StatusBarBox" edgeColor="00000000" centerColor="00000000">
                    <Anchor point="TOPLEFT" offsetY="25"/>
                    <Anchor point="BOTTOMRIGHT"/>

                    <Controls>
                        <Backdrop name="DJPlayerHealth" inherits="UnitFrameStatusBar">
                            <Anchor point="TOPLEFT"/>
                            <Anchor point="TOPRIGHT"/>
                        </Backdrop>
                        <Backdrop name="DJPlayerMagika" inherits="UnitFrameStatusBar">
                            <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="DJPlayerHealth"/>
                            <Anchor point="TOPRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="DJPlayerHealth"/>
                        </Backdrop>
                        <Backdrop name="DJPlayerStamina" inherits="UnitFrameStatusBar">
                            <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="DJPlayerMagika"/>
                            <Anchor point="TOPRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="DJPlayerMagika"/>
                        </Backdrop>
                    </Controls>
                </Backdrop>
            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>