<GuiXml>
    <Controls>
        <TopLevelControl name="DJTargetFrame" mouseEnabled="false">
            <Dimensions x="225" y="90"/>
            <Anchor point="CENTER" offsetX="400" offsetY="300"/>

            <Controls>
                <Label name="DJTargetLevelLabel" layer="1" level="1"
                        font="DJNAMEFONT"
                        color="BBAABB" text="100" verticalAlignment="CENTER" horizontalAlignment="LEFT">
                    <Anchor point="TOPRIGHT"/>    
                </Label>
                <Label name="DJTargetNameLabel" layer="1" level="1"
                       font="DJNAMEFONT"
                       color="BBAABB" text="Target Name" verticalAlignment="CENTER" horizontalAlignment="LEFT">
                    <Anchor point="TOPRIGHT" relativePoint="TOPLEFT" relativeTo="DJTargetLevelLabel" offsetX="-10" />
                </Label>

                <Backdrop name="$(parent)StatusBarBox" edgeColor="00000000" centerColor="00000000">
                    <Anchor point="TOPLEFT" offsetY="25"/>
                    <Anchor point="BOTTOMRIGHT"/>

                    <Controls>
                        <Backdrop name="DJTargetHealth" inherits="UnitFrameStatusBarReverse">
                            <Anchor point="TOPLEFT"/>
                            <Anchor point="TOPRIGHT"/>
                        </Backdrop>
                        <Backdrop name="DJTargetMagika" inherits="UnitFrameStatusBarReverse">
                            <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="DJTargetHealth"/>
                            <Anchor point="TOPRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="DJTargetHealth"/>
                        </Backdrop>
                        <Backdrop name="DJTargetStamina" inherits="UnitFrameStatusBarReverse">
                            <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT" relativeTo="DJTargetMagika"/>
                            <Anchor point="TOPRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="DJTargetMagika"/>
                        </Backdrop>
                    </Controls>
                </Backdrop>
            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>