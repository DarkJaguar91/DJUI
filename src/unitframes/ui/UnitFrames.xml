<GuiXml>
    <Controls>
        <Backdrop name="UnitFrameStatusBar" layer="0" level="3" edgeColor="FF000000" centerColor="00000000" virtual="true">
            <Dimensions y="15"/>
            <Edge edgeSize="2.5"/>

            <Controls>
                <StatusBar name="$(parent)Bar" layer="0" level="2" color="FF999999">
                    <Anchor point="TOPLEFT" offsetX="2" offsetY="2"/>
                    <Anchor point="BOTTOMRIGHT" offsetX="-2" offsetY="-2"/>

                    <Limits min="0" max="100"/>

                    <Controls>
                        <Label name="$(parent)PercentageText" layer="0" level="3" color="FFFFFFFF"
                               font="DJSTATUSBARFONT">
                            <Anchor point="TOPRIGHT" offsetY="-1" offsetX="-3"/>
                        </Label>
                        <Label name="$(parent)ValueText" layer="0" level="3" color="FFFFFFFF"
                               font="DJSTATUSBARFONT">
                            <Anchor point="TOPLEFT" offsetY="-1" offsetX="3"/>
                        </Label>
                    </Controls>
                </StatusBar>
            </Controls>
        </Backdrop>
        <Backdrop name="UnitFrameStatusBarReverse" layer="0" level="3" edgeColor="FF000000" centerColor="00000000" virtual="true">
            <Dimensions y="15"/>
            <Edge edgeSize="2.5"/>

            <Controls>
                <StatusBar name="$(parent)Bar" layer="0" level="2" color="FF999999" barAlignment="REVERSE">
                    <Anchor point="TOPLEFT" offsetX="2" offsetY="2"/>
                    <Anchor point="BOTTOMRIGHT" offsetX="-2" offsetY="-2"/>

                    <Limits min="0" max="100"/>

                    <Controls>
                        <Label name="$(parent)PercentageText" layer="0" level="3" color="FFFFFFFF"
                               font="DJSTATUSBARFONT">
                            <Anchor point="TOPLEFT" offsetY="-1" offsetX="3"/>
                        </Label>
                        <Label name="$(parent)ValueText" layer="0" level="3" color="FFFFFFFF"
                               font="DJSTATUSBARFONT">
                            <Anchor point="TOPRIGHT" offsetY="-1" offsetX="-3"/>
                        </Label>
                    </Controls>
                </StatusBar>
            </Controls>
        </Backdrop>
    </Controls>
</GuiXml>